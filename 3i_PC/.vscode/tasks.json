{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file with OPENMPI",
            "command": "mpic++",
            "args": [
                "-g",
                "-fopenmp", // bổ sung thư viện OpenMP vào quá trình build và giúp tìm và liên kết các hàm OpenMP cần thiết.
                "-I/usr/lib/x86_64-linux-gnu/openmpi/include", "-I/usr/lib/x86_64-linux-gnu/openmpi/include/openmpi",
                "${file}",
                "-L/usr/lib/x86_64-linux-gnu/openmpi/lib", "-lmpi", "-pthread",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "options": {
        "env": {
            "PATH": "${env:PATH}:/usr/lib/x86_64-linux-gnu/openmpi/bin",
            "LD_LIBRARY_PATH": "${env:LD_LIBRARY_PATH}:/usr/lib/x86_64-linux-gnu/openmpi/lib"
        }
    },
    "version": "2.0.0"
}

